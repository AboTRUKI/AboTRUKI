<script>
    document.querySelector("form").addEventListener("submit", function(event) {
        event.preventDefault();
        var username = document.getElementById("username").value;
        var password = document.getElementById("password").value;
        if (username === "abdullah" && password === "13771377") {
            window.location.href = "dashboard.html"; // توجيه المستخدم إلى صفحة اللوحة الرئيسية بعد تسجيل الدخول بنجاح
        } else {
            document.querySelector(".error").textContent = "اسم المستخدم أو كلمة المرور غير صحيحة.";
        }
    });
</script>
